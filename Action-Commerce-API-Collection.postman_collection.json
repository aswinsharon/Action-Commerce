{
    "info": {
        "_postman_id": "action-commerce-api-collection-v2",
        "name": "Action Commerce - Complete API Collection",
        "description": "Complete Commerce Tools compatible API collection for Action Commerce microservices including Payments, Carts, Products, Categories, and User Management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{auth_token}}",
                "type": "string"
            }
        ]
    },
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "pm.request.headers.add({",
                    "    key: 'x-client-id',",
                    "    value: pm.environment.get('client_id') || 'postman-test-client'",
                    "});"
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000"
        },
        {
            "key": "user_management_url",
            "value": "http://localhost:6001"
        },
        {
            "key": "products_url",
            "value": "http://localhost:6002"
        },
        {
            "key": "categories_url",
            "value": "http://localhost:6003"
        },
        {
            "key": "carts_url",
            "value": "http://localhost:6004"
        },
        {
            "key": "payments_url",
            "value": "http://localhost:6005"
        }
    ],
    "item": []
}